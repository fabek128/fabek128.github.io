<section id="hero" class="min-h-screen flex items-center justify-center px-6 md:px-12 py-24 md:py-32">
	<div class="max-w-7xl w-full mx-auto">
		<div class="grid md:grid-cols-[1.2fr,0.8fr] gap-16 md:gap-20 items-center">
			<!-- Left: Content -->
			<div class="space-y-8">
				<h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight leading-tight">
					Hi, I'm <span class="text-emerald-400">Fabian Figueredo</span>
				</h1>

				<p class="text-xl md:text-2xl lg:text-3xl text-gray-400 font-light">
					Generative AI Specialist & Data Scientist
				</p>

				<p class="text-base md:text-lg lg:text-xl text-gray-300 leading-relaxed max-w-2xl">
					Transforming complex data into actionable insights and building intelligent solutions with modern technology.
				</p>

				<!-- CTAs -->
				<div class="flex flex-wrap gap-4 pt-4">
					<a
						href="#contact"
						class="px-6 py-3 bg-emerald-500 hover:bg-emerald-600 text-white font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 focus:ring-offset-gray-950"
					>
						Get in touch
					</a>
					<a
						href="https://github.com/fabek128"
						target="_blank"
						rel="noopener noreferrer"
						class="px-6 py-3 bg-gray-800 hover:bg-gray-700 text-white font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 focus:ring-offset-gray-950"
					>
						View GitHub
					</a>
				</div>
			</div>

			<!-- Right: Photo -->
			<div class="flex justify-center md:justify-end">
				<div class="relative w-64 h-64 md:w-80 md:h-80 lg:w-96 lg:h-96">
					<div class="absolute inset-0 bg-emerald-500/20 blur-3xl rounded-full animate-pulse"></div>
					<picture>
						<source
							type="image/webp"
							srcset="/fbk14-mobile.webp 128w, /fbk14-tablet.webp 224w, /fbk14-desktop.webp 448w"
							sizes="(max-width: 768px) 256px, 384px"
						/>
						<img
							src="/fbk14.png"
							alt="Fabian Figueredo"
							class="relative rounded-full w-full h-full object-cover border-4 border-gray-800 shadow-2xl ring-2 ring-emerald-500/20"
							loading="eager"
							width="384"
							height="384"
						/>
					</picture>
				</div>
			</div>
		</div>
	</div>
</section>
