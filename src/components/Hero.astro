<section id="hero" class="min-h-screen flex items-center justify-center px-6 py-20">
	<div class="max-w-6xl w-full mx-auto">
		<div class="grid md:grid-cols-2 gap-12 items-center">
			<!-- Left: Content -->
			<div class="space-y-6">
				<h1 class="text-5xl md:text-6xl font-bold tracking-tight">
					Hi, I'm <span class="text-emerald-400">Fabian Figueredo</span>
				</h1>

				<p class="text-xl md:text-2xl text-gray-400 font-light">
					Generative AI Specialist & Data Scientist
				</p>

				<p class="text-lg text-gray-300 leading-relaxed">
					Transforming complex data into actionable insights and building intelligent solutions with modern technology.
				</p>

				<!-- CTAs -->
				<div class="flex flex-wrap gap-4 pt-4">
					<a
						href="#contact"
						class="px-6 py-3 bg-emerald-500 hover:bg-emerald-600 text-white font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 focus:ring-offset-gray-950"
					>
						Get in touch
					</a>
					<a
						href="https://github.com/fabek128"
						target="_blank"
						rel="noopener noreferrer"
						class="px-6 py-3 bg-gray-800 hover:bg-gray-700 text-white font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 focus:ring-offset-gray-950"
					>
						View GitHub
					</a>
				</div>
			</div>

			<!-- Right: Photo -->
			<div class="flex justify-center md:justify-end">
				<div class="relative">
					<div class="absolute inset-0 bg-emerald-500/20 blur-3xl rounded-full"></div>
					<picture>
						<source
							type="image/webp"
							srcset="/fbk14-mobile.webp 128w, /fbk14-tablet.webp 224w, /fbk14-desktop.webp 448w"
							sizes="(max-width: 768px) 192px, 224px"
						/>
						<img
							src="/fbk14.png"
							alt="Fabian Figueredo"
							class="relative rounded-full w-48 h-48 md:w-56 md:h-56 object-cover border-4 border-gray-800 shadow-2xl"
							loading="eager"
							width="224"
							height="224"
						/>
					</picture>
				</div>
			</div>
		</div>
	</div>
</section>
