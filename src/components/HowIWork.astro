---
const steps = [
	{
		title: "Discover",
		description: "Align on the problem, the data reality, and the success criteria."
	},
	{
		title: "Build",
		description: "Design and ship AI systems that fit the product and the stack."
	},
	{
		title: "Measure",
		description: "Validate results in production and iterate with real feedback."
	}
];
---

<section id="how-i-work" class="border-t border-[color:var(--border)] py-20 px-6 lg:py-24">
	<div class="mx-auto max-w-6xl">
		<div class="flex flex-wrap items-end justify-between gap-6">
			<h2 class="font-display text-3xl md:text-4xl">How I work</h2>
			<p class="max-w-xl text-sm text-[color:var(--muted)]">
				A compact process that keeps delivery honest and grounded in data.
			</p>
		</div>

		<ol class="mt-10 grid gap-6 md:grid-cols-3">
			{steps.map((step, index) => (
				<li class="rounded-2xl border border-[color:var(--border)] bg-[color:var(--surface)] p-6">
					<div class="flex items-center gap-3">
						<span class="flex h-10 w-10 items-center justify-center rounded-full border border-[color:var(--border)] text-sm font-semibold text-[color:var(--accent)]">
							{String(index + 1).padStart(2, "0")}
						</span>
						<h3 class="font-display text-xl">{step.title}</h3>
					</div>
					<p class="mt-4 text-sm leading-relaxed text-[color:var(--muted)]">
						{step.description}
					</p>
				</li>
			))}
		</ol>
	</div>
</section>
